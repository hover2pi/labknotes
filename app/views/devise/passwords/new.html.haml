- title "Password Reset"

.message
  %h3.left== Reset Your Password
  .clear

.grid_12.h-pads
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
    = devise_error_messages!
    
    .v-pads
      %h5= f.label :email
      = f.text_field :email

    .v-pads
      .button= f.submit "Send me reset password instructions"

    .v-pads= link_to "Sign In", new_session_path(resource_name)

    .v-pads= link_to "I don't have an account yet!", new_registration_path(resource_name)

