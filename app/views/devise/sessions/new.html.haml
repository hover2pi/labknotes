- title "Sign In"

.message
  %h3.left== Sign In
  .clear

.grid_12.h-pads
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    .v-pads
      %h5= f.label :email
      = f.text_field :email
    .v-pads
      %h5= f.label :password
      = f.password_field :password
    - if devise_mapping.rememberable?
      .v-pads
        %h5
          = f.check_box :remember_me
          = f.label :remember_me
    .v-pads
      .button= f.submit "Sign in"
    .v-pads= link_to "Forgot your password?", new_password_path(resource_name)
    .v-pads= link_to "Sign up!", new_registration_path(resource_name)

