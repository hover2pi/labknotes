= form_for @answer do |f|
  -if @answer.errors.any?
    #error_explanation
      %h3= "#{pluralize(@answer.errors.count, "error")} prohibited this answer from being saved:"
      %ul
        - @answer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :report
    = f.text_field :report
  .field
    = f.label :explanation
    = f.text_field :explanation
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
